{
	"comment": "README file in this directory",
	"output-directory": "results/magnetohydrodynamic/reconnection/2d/y1/roe_athena",
	"time-start": 0,
	"time-length": 20,
	"resistivity": "0",
	"solver-mhd": "roe-athena",
	"load-balancer": "RANDOM",
	"save-mhd-n": 1,
	"adiabatic-index": 1.666666667,
	"vacuum-permeability": 1,
	"proton-mass": 1,
	"remove-div-B-n": 0.2,
	"time-step-factor": 0.5,
	"poisson-norm-stop": 1e-10,
	"poisson-norm-increase-max": 10,
	"grid-options": {
		"periodic": "{true, false, false}",
		"comment": "odd number of cells in vertical direction helps",
		"cells": "{2*17, 1, 1*17 + 2}",
		"volume": "{25.6, 12.8, 12.8 * (1 + 2 / (cells[2] - 2))}",
		"start": "{-volume[0]/2, -volume[1]/2, -volume[2]/2}"
	},
	"geometries": [
		{"box": {
			"start": [-999, -999, 6.4],
			"end": [999, 999, 999]
		}},
		{"box": {
			"start": [-999, -999, -999],
			"end": [999, 999, -6.4]
		}}
	],
	"number-density": {
		"default": "1/cosh(z / 0.5)^2 + 0.2",
		"copy-boundaries": [{"geometry-id": 0}, {"geometry-id": 1}]
	},
	"velocity": {
		"default": "{0, 0, 0}",
		"copy-boundaries": [{"geometry-id": 0}, {"geometry-id": 1}]
	},
	"pressure": {
		"default": 1,
		"copy-boundaries": [{"geometry-id": 0}, {"geometry-id": 1}]
	},
	"magnetic-field": {
		"default": "{tanh(z / 0.5) - 0.1 * pi/12.8 * cos(2*pi*x/25.6) * sin(pi*z/12.8), 0, 0.1 * 2*pi/25.6 * sin(2*pi*x/25.6) * cos(pi*z/12.8)}",
		"copy-boundaries": [{"geometry-id": 0}, {"geometry-id": 1}]
	}
}
